
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

    <h2>Login</h2>

    <form id="form">
        <div id="" class="row ">
            <div class="col-lg-12">
                <label class="label1">Usuario</label>
                <input type="text" class="form-control" name="user" />
            </div>
            <div class="col-lg-12">
                <label>Password</label>
                <input type="password" class="form-control" name="password" />
            </div>
                
            <div class="col-lg-12">
                <input type="submit" class="btn btn-success btn-block login" value="Ingresar" />
            </div>
        </div>
    </form>

@section scripts 
{
    <script>
    $(document).ready(function () {
        $("form").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Login/Ingresar")"
            params = $(this).serialize();

            $.post(url, params, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/")";
                } else {
                    alert(data)
                }
            })
        })
    })
    </script>
}

