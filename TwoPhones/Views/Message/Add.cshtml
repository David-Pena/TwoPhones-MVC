@model TwoPhones.Models.ViewModels.MessageViewModel
@{
    ViewBag.Title = "Send Message";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Add", "Message", FormMethod.Post, new { role = "form", @class = "" }))
        {

            // Cuando hay un error en el formulario, se muestra este mensaje
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            <br />

            @Html.LabelFor(alias => alias.From)
            @Html.TextBoxFor(alias => alias.From, new { @class = "form-control" })
            @Html.ValidationMessage("From", new { @class = "text-danger" })

            <br />

            @Html.LabelFor(alias => alias.To)
            @Html.TextBoxFor(alias => alias.To, new { @class = "form-control" })
            @Html.ValidationMessage("To", new { @class = "text-danger" })

            <br />

            @Html.LabelFor(alias => alias.Message)
            @Html.TextBoxFor(alias => alias.Message, new { @class = "form-control" })
            @Html.ValidationMessage("Message", new { @class = "text-danger" })

            <br />

            <input type="submit" class="btn btn-block btn-success mt-3 sendMessage" value="Send Message" />
        }
    </div>
</div>

